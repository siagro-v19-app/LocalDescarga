<mvc:View controllerName="br.com.idxtecLocalDescarga.controller.LocalDescarga"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	height="100%"
	width="100%"
	xmlns:t="sap.ui.table">
	<App>
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Local Descarga">
							<t:Table id="tableLocal"
								rows="{path: '/LocalDescargas'}"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Interactive"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Locais de Descarga"/>
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="Descricao" sortProperty="Descricao">
										<Label text="Descrição"/>
										<t:template>
											<Text text="{Descricao}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="InformacoesNotaFiscal" sortProperty="InformacoesNotaFiscal">
										<Label text="Informações NF"/>
										<t:template>
											<Text text="{InformacoesNotaFiscal}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Observacoes" sortProperty="Observacoes">
										<Label text="Observações"/>
										<t:template>
											<Text text="{Observacoes}"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>